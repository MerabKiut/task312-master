<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:hint="0"
        android:textSize="32sp" />

    <LinearLayout
        android:id="@+id/numbers_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actions_adv"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/numbers_7_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_7"
                android:onClick="buttonClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                android:onClick="buttonClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                android:onClick="buttonClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbers_4_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_4"
                android:onClick="buttonClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                android:onClick="buttonClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                android:onClick="buttonClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbers_1_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                android:onClick="buttonClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                android:onClick="buttonClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                android:onClick="buttonClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbers_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_comma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:text="." />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:text="0" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/actions_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/numbers_all"
        android:layout_below="@+id/result"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_mult"
            android:onClick="buttonClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*" />

        <Button
            android:id="@+id/btn_div"
            android:onClick="buttonClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />

        <Button
            android:id="@+id/btn_plus"
            android:onClick="buttonClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />

        <Button
            android:id="@+id/btn_min"
            android:onClick="buttonClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <Button
            android:id="@+id/btn_equal"
            android:onClick="buttonClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="=" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/actions_adv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_C"
            android:onClick="buttonClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C" />

        <Button
            android:id="@+id/btn_plusminus"
            android:onClick="buttonClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+/-" />

        <Button
            android:id="@+id/btn_percent"
            android:onClick="buttonClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%" />

    </LinearLayout>



</RelativeLayout>